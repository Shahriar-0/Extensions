{
    "manifest_version": 3,
    "name": "Copy Links",
    "version": "1.1",
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Copy Links",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/favicon-16x16.png",
            "32": "icons/favicon-32x32.png"
        }
    }
}
