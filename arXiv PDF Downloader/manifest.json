{
    "manifest_version": 3,
    "name": "arXiv PDF Downloader",
    "version": "1.0",
    "description": "Downloads and renames arXiv PDFs to the paper's title",
    "permissions": ["downloads", "activeTab", "scripting"],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "arXiv.PDF.Downloader@example.com"
        }
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Download PDF",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://arxiv.org/abs/*"],
            "js": ["content.js"]
        }
    ]
}
